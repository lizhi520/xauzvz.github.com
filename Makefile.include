	CFLAGS += -Wall
endif

INSTALL_INCLUDE = $(PREFIX)/include
INSTALL_LIB     = $(PREFIX)/lib 
INSTALL_BIN     = $(PREFIX)/bin

AR = $(CROSS)ar
RANLIB = $(CROSS)ranlib


