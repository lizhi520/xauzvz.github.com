DEBUG = 

TOPDIR = $(shell pwd)

#PREFIX = /usr/local
PREFIX = $(TOPDIR)/build

CROSS = 
#CROSS = arm-linux-

CC = $(CROSS)gcc

CFLAGS = -I. 
LDFLAGS = 

ifeq ($(DEBUG), Y)
	CFLAGS += -g
	CFLAGS += -Wall
else
	CFLAGS += -O3	
